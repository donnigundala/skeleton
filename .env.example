# ==================================
# Application Configuration
# ==================================
APP_NAME="DG Framework App"
APP_ENV=development
APP_DEBUG=true

# ==================================
# Server Configuration (Matches server.yaml)
# ==================================
SERVER_ADDR=:8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_TLS_ENABLED=false

# ==================================
# Database Configuration (Matches database.yaml)
# ==================================
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=skeleton_v2_dev
DB_USERNAME=postgres
DB_PASSWORD=secret
DB_SCHEMA=public

# Database Connection Pool
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=3600s

# Database Logging
DB_LOG_LEVEL=warn
DB_SLOW_THRESHOLD=200ms

# ==================================
# Redis Configuration (Matches redis.yaml)
# ==================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# ==================================
# Filesystem Configuration (Matches filesystem.yaml)
# ==================================
FILESYSTEM_DEFAULT=local

# Local
FILESYSTEM_DISKS_LOCAL_ROOT=./storage/app/public
FILESYSTEM_DISKS_LOCAL_URL=http://localhost:8080/storage

# S3 / MinIO (Note: keys match nested structure in filesystem.yaml)
# filesystem.disks.s3.bucket -> FILESYSTEM_DISKS_S3_BUCKET
FILESYSTEM_DISKS_S3_BUCKET=local-bucket
FILESYSTEM_DISKS_S3_REGION=us-east-1
FILESYSTEM_DISKS_S3_ENDPOINT=http://localhost:9000
FILESYSTEM_DISKS_S3_USE_PATH_STYLE=true

# Compatibility for SDKs (Optional, depends if app uses them directly)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# ==================================
# Cache Configuration (Matches cache.yaml)
# ==================================
CACHE_DRIVER=redis
CACHE_PREFIX=skeleton_v2_
CACHE_TTL=300

# ==================================
# Queue Configuration (Matches queue.yaml)
# ==================================
QUEUE_DRIVER=redis
QUEUE_PREFIX=skeleton_v2_queue_
QUEUE_DEFAULT_QUEUE=default
QUEUE_WORKERS=10

# Queue Options (queue.options.addr)
QUEUE_OPTIONS_ADDR=localhost:6379
QUEUE_OPTIONS_DB=0

# ==================================
# Logging Configuration
# ==================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout

# ==================================
# Security Configuration
# ==================================
JWT_SECRET=change-this-to-a-random-secret-key
JWT_EXPIRATION=86400

# ==================================
# CORS Configuration
# ==================================
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_ALLOW_CREDENTIALS=true
