# ==================================
# Application Configuration
# ==================================
APP_NAME=SkeletonV2
APP_ENV=development
APP_DEBUG=true
APP_PORT=8080

# ==================================
# Database Configuration
# ==================================
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=skeleton_v2_dev
DB_USERNAME=postgres
DB_PASSWORD=secret
DB_SCHEMA=public

# Database Connection Pool
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=3600

# Database Logging
DB_LOG_LEVEL=warn
DB_SLOW_THRESHOLD=200

# ==================================
# Redis Configuration
# ==================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# ==================================
# Filesystem Configuration
# ==================================
FILESYSTEM_DEFAULT=local

# Local
FILESYSTEM_LOCAL_ROOT=./storage/app/public
FILESYSTEM_LOCAL_URL=http://localhost:8080/storage

# S3 / MinIO
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=local-bucket
AWS_URL=http://localhost:9000/local-bucket
AWS_ENDPOINT=http://localhost:9000
AWS_USE_PATH_STYLE=true

# ==================================
# Cache Configuration
# ==================================
CACHE_DRIVER=redis
CACHE_PREFIX=skeleton_v2_
CACHE_TTL=300

# ==================================
# Queue Configuration
# ==================================
QUEUE_DRIVER=redis
QUEUE_PREFIX=skeleton_v2_queue_
QUEUE_DEFAULT=default

# ==================================
# Logging Configuration
# ==================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout

# ==================================
# Security Configuration
# ==================================
JWT_SECRET=change-this-to-a-random-secret-key
JWT_EXPIRATION=86400

# ==================================
# CORS Configuration
# ==================================
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_ALLOW_CREDENTIALS=true
